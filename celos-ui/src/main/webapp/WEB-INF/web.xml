<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
        "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

    <servlet>
        <servlet-name>UIServlet</servlet-name>
        <servlet-class>com.collective.celos.old.UIServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UIRerunServlet</servlet-name>
        <servlet-class>com.collective.celos.old.UIRerunServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UIServlet</servlet-name>
        <url-pattern>/ui</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UIRerunServlet</servlet-name>
        <url-pattern>/rerun</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.ConfigServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WorkflowsServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.ReactWorkflowsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TriggerStatusServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.TriggerStatusServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UIActionServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.UIActionServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>VersionServlet</servlet-name>
        <servlet-class>com.collective.celos.servlet.VersionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConfigServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WorkflowsServlet</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TriggerStatusServlet</servlet-name>
        <url-pattern>/trigger-status</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UIActionServlet</servlet-name>
        <url-pattern>/multiplex-rpc</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VersionServlet</servlet-name>
        <url-pattern>/version</url-pattern>
    </servlet-mapping>


</web-app>
