<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
        "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>

    <servlet>
        <servlet-name>UIServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.UIServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WorkflowsServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.ReactWorkflowsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TriggerStatusServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.TriggerStatusServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UIRerunServlet</servlet-name>
        <servlet-class>com.collective.celos.ui.UIRerunServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>VersionServlet</servlet-name>
        <servlet-class>com.collective.celos.servlet.VersionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UIServlet</servlet-name>
        <url-pattern>/ui</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WorkflowsServlet</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TriggerStatusServlet</servlet-name>
        <url-pattern>/trigger-status</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UIRerunServlet</servlet-name>
        <url-pattern>/rerun</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VersionServlet</servlet-name>
        <url-pattern>/version</url-pattern>
    </servlet-mapping>


</web-app>
